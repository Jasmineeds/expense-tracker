<!-- index.hbs -->
<div class="container mt-5">
  <div class="d-flex flex-column align-items-center d-grid gap-3">
    <!-- category dropdown -->
    <div class="dropdown mb-3">
      <button class="btn btn-secondary dropdown-toggle dropdown" style="min-width: 300px;" type="button" id="category"
        data-bs-toggle="dropdown" aria-expanded="false">
        類別
      </button>
      <ul class="dropdown-menu" style="min-width: 300px;" aria-labelledby="category">
        <li><a class="dropdown-item" href="#">家居物業</a></li>
        <li><a class="dropdown-item" href="#">交通出行</a></li>
        <li><a class="dropdown-item" href="#">休閒娛樂</a></li>
        <li><a class="dropdown-item" href="#">餐飲食品</a></li>
        <li><a class="dropdown-item" href="#">其他</a></li>
      </ul>
    </div>

    <!-- show total amount -->
    <div class="d-flex justify-content-between">
      <p>總金額：</p>
      <h1>25260</h1>
    </div>

    <!-- record list -->
    <ul class="list-group list-group-horizontal">
      <!-- record details -->
      <li class="list-group-item">
        <div class="row" style="min-width: 400px;">
          <div class="d-flex">
            <div class="d-flex align-items-center w-100 bd-highlight">
              <i class="fa-solid fa-utensils" style="font-size: 50px; color:aquamarine"></i>
              <div class="m-2">
                <p class="m-0" style="font: size 28px;">
                  午餐
                </p>
                <p class="m-0" style="color: gray;">
                  2019/04/23
                </p>
              </div>
            </div>
            <div class="d-flex align-items-center flex-shrink-1 bd-highlight">
              <p class="m-0" style="font-size:28px;">
                60
              </p>
            </div>
          </div>
        </div>
      </li>
      <!-- action btn -->
      <li class="list-group-item">
        <div class="d-flex align-items-center">
          <a class="btn btn-success m-1" href="./records/{{ this._id }}/edit">Edit</a>
          <form action="./records/{{ this._id }}?_method=DELETE" method="POST">
            <button class="btn btn-danger m-1" type="submit">Delete</button>
          </form>
        </div>
      </li>
    </ul>

    <!-- Create new record btn -->
    <button type="button" class="btn btn-primary mt-3" style="min-width: 300px;">新增支出</button>

  </div>


</div>